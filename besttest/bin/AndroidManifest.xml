<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.promarkvf.besttest"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="hu.promarkvf.besttest.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="hu.promarkvf.besttest.BeallitasActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_beallitas"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="hu.promarkvf.besttest.KategoriakActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_kategoriak"
            android:parentActivityName="android.app.ExpandableListActivity"
            android:theme="@style/FullscreenTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.app.ExpandableListActivity" />
        </activity>
        <activity
            android:name="hu.promarkvf.besttest.KategoriaAddActivity"
            android:label="@string/title_activity_kategoria_add"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="hu.promarkvf.besttest.KerdesekActivity"
            android:label="@string/title_activity_kerdesek" >
        </activity>
        <activity
            android:name="hu.promarkvf.besttest.KerdesekAddActivity"
            android:label="@string/title_activity_kerdesek_add" android:theme="@android:style/Theme.Dialog">
        </activity>
    </application>

</manifest>